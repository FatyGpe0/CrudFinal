<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inicio</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
</head>
<body>
    
<div class="container">
    <!--comienza form-->
    <div class="col-4">
        <div class="card">
            <div class="card-body">
                <form action="/add" method="POST">
                    <div class="form-group">
                        <label for="producto" class="form-label">Nombre</label>
                        <input type="text" id="clientes" name="clientes" placeholder="clientes" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="producto" class="form-label">Apellido</label>
                        <input type="text" id="apellido" name="apellido" class="form-control">
                    </div>
                    <div class="form-group">
                        <label for="producto" class="form-label">Mesa</label>
                        <input type="text" id="mesa" name="mesa" class="form-control">
                    </div>
                </form>
            </div>
        </div>
    </div>


  <div class="col-md-5">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Mesa</th>

            </tr>
        </thead>
        <tbody>
            <% for(var i = 0; i < datos.length; i++){  %>
                <tr>
                    <td><%= i+1  %></td>
                    <td><%= datos[i].nombre  %></td>
                    <td><%= datos[i].apellido  %></td>
                    <td><%= datos[i].mesa  %></td>
                    <td>
                        <!--<a class="btn btn-primary" href="/del/<%= datos[i].id %>">Eliminar</a>-->
                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
                            Eliminar
                        </button>
                        
                        <!-- Modal -->
                      

                       
                    </td>
                </tr>
            <% } %>
        </tbody>
    </table>
</div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>